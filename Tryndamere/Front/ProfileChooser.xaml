<Page x:Class="Tryndamere.Front.ProfileChooser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tryndamere.Front"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfileChooser" Margin="0,0,0,0">

    <Grid>
        <ListBox x:Name="profileListBox" Margin="10,10,10,70" SizeChanged="profileListBox_SizeChanged"/>
        <Button x:Name="newProfileButton" Content="Nouveau profil" HorizontalAlignment="Right" Height="30" Margin="0,0,50,20" VerticalAlignment="Bottom" Width="100
                ">
        </Button>
        <StackPanel/>

    </Grid>
</Page>
